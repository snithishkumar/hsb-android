<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#BF360C</item>
        <!--<item name="colorAccent">@color/cardview_dark_background</item> -->
    </style>


    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2E7D32</item>
        <item name="colorPrimaryDark">#1B5E20</item>
        <item name="colorAccent">#BF360C</item>
        <!--<item name="colorAccent">@color/cardview_dark_background</item> -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="small_round_style">
        <item name="android:background">@drawable/small_round_background</item>
    </style>

    <style name="key_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/round_button_click</item>
    </style>
</resources>
