<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="620dp"
        android:layout_height="600dp"
        android:src="@drawable/no_internet"
        android:id="@+id/no_internet"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_internet"
        android:id="@+id/check_your_settings"
        android:layout_centerVertical="true"
        android:textSize="27sp"
        android:layout_centerHorizontal="true"
        android:text="Please check your Internet Settings."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:id="@+id/try_now"
        android:layout_below="@+id/check_your_settings"
        android:text="Try Now."
        />
</RelativeLayout>