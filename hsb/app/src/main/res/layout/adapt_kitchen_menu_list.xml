<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Briyani"
            android:textStyle="bold"
            android:id="@+id/menu_item_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/menu_item_number"
            android:text="Item Number: 45"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/menus_ordered_count"
            android:text="Current Count: 45"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total Count: 20"
            android:id="@+id/total_count"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/total_count_edit_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/remaining_count"
            android:layout_height="42dp"
            android:text="100"
            android:layout_marginTop="10dp"
            android:layout_width="125dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="3"
            android:background="@drawable/kitchen_rectangle_corner">
        </EditText>
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/menu_updates_save"
            android:layout_marginTop="5dp"
            android:src="@drawable/tick_mark_dark"
            />

    </LinearLayout>




</RelativeLayout>