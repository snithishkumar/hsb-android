<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/adapt_kitchen_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4x"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/holo_green_dark"/>

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/adapt_kitchen_settings"
        android:src="@drawable/ic_more_vert_black_48dp"
        android:layout_alignParentRight="true"
         />

   <!-- <TextView
        android:id="@+id/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 480"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/adapt_kitchen_total_count"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/adapt_kitchen_settings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapt_kitchen_order_name"
            android:text="Chicken Chukka"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</RelativeLayout>